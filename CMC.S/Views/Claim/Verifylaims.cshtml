@model IEnumerable<CMCS.Models.Claim>

<h2>Pending Claims</h2>
<table class="table">
    <thead>
        <tr>
            <th>Lecturer ID</th>
            <th>Hours Worked</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerID</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.ClaimStatus</td>
                <td>
                    <a asp-action="ApproveClaim" asp-route-id="@claim.ClaimID" class="btn btn-success">Approve</a>
                    <a asp-action="RejectClaim" asp-route-id="@claim.ClaimID" class="btn btn-danger">Reject</a>
                </td>
            </tr>
        }
    </tbody>
</table>
